{
   "name": "motd",
   "description": "Message of the Day service for Gridlinks",
   "version": "0.0.10",
   "author": "Marc J. Greenberg <marc.greenberg@codemarc.net> (https://codemarc.net)",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/codemarc/gridsvcs-motd"
   },
   "main": "src/server.js",
   "type": "module",
   "bin": {
      "motd": "./motd.js"
   },
   "scripts": {
      "dev": "nodemon --env-file=.env.local ./motd.js server",
      "server": "node --env-file=.env --no-warnings ./motd.js server",
      "motd": "node --no-warnings --env-file=.env ./motd.js ",
      "update": "yarn version --patch",
      "build": "npx buildnumgen > build.num",
      "docker": "docker compose --env-file=.env run cli"
   },
   "license": "MIT",
   "dependencies": {
      "@supabase/supabase-js": "^2.45.3",
      "body-parser": "^1.20.2",
      "build-number-generator": "^2.0.4",
      "caporal": "^1.4.0",
      "cors": "^2.8.5",
      "date-fns": "^3.6.0",
      "express": "^4.19.2",
      "fs-extra": "^11.2.0",
      "helmet": "^7.1.0",
      "lodash": "^4.17.21",
      "openai": "^4.52.7",
      "swagger-jsdoc": "^6.2.8",
      "swagger-ui-express": "^5.0.1",
      "winston": "^3.13.1",
      "winston-daily-rotate-file": "^5.0.0"
   },
   "devDependencies": {
      "@codemarc/smashdata": "^1.0.0",
      "nodemon": "^3.1.4"
   }
}
